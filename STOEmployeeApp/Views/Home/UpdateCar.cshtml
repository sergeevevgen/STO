@{
    ViewData["Title"] = "UpdateCar";
}
<div class="text-center">
    <h2 class="display-4">Изменение автомобиля</h2>
</div>
<form method="post">
    <div class="row">
        <div class="col-4">Марка авто:</div>
        <div class="col-8">
            <input type="text" name="carBrand" id="carBrand" value="@ViewBag.Car.CarBrand"/>
        </div>
    </div>
    <div class="row">
        <div class="col-4">Модель авто:</div>
        <div class="col-8">
            <input type="text" name="carModel" id="carModel" value="@ViewBag.Car.CarModel"/>
        </div>
    </div>
    <div class="row">
        <div class="col-4">VIN:</div>
        <div class="col-8">
            <input type="text" name="VIN" id="VIN" value="@ViewBag.Car.VIN"/>
        </div>
    </div>
    <div class="row">
        <div class="col-4">Номер владельца:</div>
        <div class="col-8">
            <input type="text" name="ownerPhoneNumber" id="ownerPhoneNumber" value="@ViewBag.Car.OwnerPhoneNumber"/>
        </div>
    </div>
    <div class="row">
        <div class="col-8"></div>
        <div class="col-4"><input type="submit" value="Изменить" class="btn btnprimary" /></div>
    </div>
</form>