@using STOContracts.ViewModels
@model List<ServiceRecordViewModel>
@{
    ViewData["Title"] = "Records";
}
<div class="text-center">
    <h2 class="display-4">Записи автомобиля</h2>
</div>
<div class="text-center">
    @{
        if (Model == null)
        {
            <h3 class="display-4">Авторизируйтесь</h3>
            return;
        }
    <table class="table">
        <thead>
            <tr>
                <th>
                    Номер
                </th>
                <th>
                    Дата начала
                </th>
                <th>
                    Дата окончания
                </th>
                <th>
                    Описание
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem =>
                        item.DateBegin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem =>
                        item.DateEnd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    }
</div>
