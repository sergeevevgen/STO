<Window x:Class="STOViewTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STOViewTest"
        mc:Ignorable="d"
        Title="СТО 'Руки-Крюки'" Height="450" Width="900">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem x:Name="MenuItemWorks" Header="Работы" Click="MenuItemWorks_Click"></MenuItem>
            <MenuItem x:Name="MenuItemSparePartsAdd" Header="Привязка запчастей" Click="MenuItemLunchSeminar_Click"></MenuItem>
            <MenuItem x:Name="MenuItemSpareParts" Header="Запчасти" Click="MenuItemRooms_Click"></MenuItem>
            <MenuItem x:Name="MenuItemTimeOfWorks" Header="Продолжительность работ" Click="MenuItemRoomers_Click"></MenuItem>
            <MenuItem x:Name="MenuItemWorkTypeAdd" Header="Добавить тип работ" Click="MenuAddWorkType_Click"></MenuItem>
            <MenuItem x:Name="MenuItemStorePartReport" Header="Отчёт по запчастям" Click="MenuItemReport_Click"></MenuItem>
            <MenuItem x:Name="MenuItemExit" Header="Выход" Click="MenuItemExit_Click" Margin="150,0,0,0"></MenuItem>
        </Menu>
    </Grid>
</Window>
